<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 비디오 플레이어 영역 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <!-- SurfaceView -->
        <SurfaceView
            android:id="@+id/video_surface_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- 전체화면 버튼 (우측 위) -->
    <Button
        android:id="@+id/fullscreen_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="⛶"
        android:textSize="18sp"
        android:background="@drawable/button_background_10_percent_black"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:backgroundTint="@null"
        android:padding="0dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:clickable="true"
        android:focusable="true" />

    <!-- PTZ 제어 버튼들 오버레이 -->
    <LinearLayout
        android:id="@+id/ptz_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end|bottom"
        android:padding="16dp">

        <!-- PTZ 제어 버튼 그룹 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/transparent"
            android:padding="8dp">

            <!-- 방향 버튼들 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- 상단 버튼 (상) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7dp"
                    android:gravity="center">

                    <Space
                        android:layout_width="37dp"
                        android:layout_height="37dp" />

                    <Button
                        android:id="@+id/ptz_up_button"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:text="▲"
                        android:textSize="18sp"
                        android:background="@drawable/button_background_10_percent_black"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:backgroundTint="@null"
                        android:padding="0dp"
                        android:layout_gravity="center" />

                    <Space
                        android:layout_width="37dp"
                        android:layout_height="37dp" />

                </LinearLayout>

                <!-- 중간 버튼 (좌, 홈, 우) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="7dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/ptz_left_button"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:text="◀"
                        android:textSize="18sp"
                        android:background="@drawable/button_background_10_percent_black"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:backgroundTint="@null"
                        android:padding="0dp"
                        android:layout_gravity="center" />

                    <Button
                        android:id="@+id/ptz_home_button"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:text="●"
                        android:textSize="18sp"
                        android:background="@drawable/button_background_10_percent_black"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="center"
                        android:backgroundTint="@null"
                        android:padding="0dp"
                        android:layout_gravity="center" />

                    <Button
                        android:id="@+id/ptz_right_button"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:text="▶"
                        android:textSize="18sp"
                        android:background="@drawable/button_background_10_percent_black"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:backgroundTint="@null"
                        android:padding="0dp"
                        android:layout_gravity="center" />

                </LinearLayout>

                <!-- 하단 버튼 (하) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Space
                        android:layout_width="37dp"
                        android:layout_height="37dp" />

                    <Button
                        android:id="@+id/ptz_down_button"
                        android:layout_width="37dp"
                        android:layout_height="37dp"
                        android:text="▼"
                        android:textSize="18sp"
                        android:background="@drawable/button_background_10_percent_black"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:backgroundTint="@null"
                        android:padding="0dp"
                        android:layout_gravity="center" />

                    <Space
                        android:layout_width="37dp"
                        android:layout_height="37dp" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

        <!-- 녹화/사진 버튼들 (오른쪽 아래) -->
        <LinearLayout
            android:id="@+id/record_photo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginEnd="@dimen/button_margin">

            <Button
                android:id="@+id/record_button"
                android:layout_width="45dp"
                android:layout_height="27dp"
                android:text="⏺"
                android:textSize="12sp"
                android:background="@drawable/button_background_10_percent_black"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:backgroundTint="@null"
                android:padding="0dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/photo_button"
                android:layout_width="45dp"
                android:layout_height="27dp"
                android:text="📷"
                android:textSize="12sp"
                android:background="@drawable/button_background_10_percent_black"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:backgroundTint="@null"
                android:padding="0dp"
                android:layout_gravity="center" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout> 