<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 비디오 플레이어 1 Fragment 컨테이너 -->
        <FrameLayout
            android:id="@+id/video_player_container1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_marginBottom="16dp" />

        <!-- URL1 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RTSP URL1:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/url_edit_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="rtsp://example.com/stream1"
            android:inputType="textUri"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />

        <!-- 연결 및 재생 제어 버튼1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/connect_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="연결1"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/success_color" />

            <Button
                android:id="@+id/disconnect_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="해제1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/error_color" />

            <Button
                android:id="@+id/play_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="재생1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/primary_color" />

            <Button
                android:id="@+id/pause_button1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="정지1"
                android:layout_marginStart="2dp"
                android:backgroundTint="@color/warning_color" />

        </LinearLayout>

        <!-- 비디오 플레이어 2 Fragment 컨테이너 -->
        <FrameLayout
            android:id="@+id/video_player_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:layout_marginBottom="16dp" />

        <!-- URL2 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RTSP URL2:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/url_edit_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="rtsp://example.com/stream2"
            android:inputType="textUri"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />

        <!-- 연결 및 재생 제어 버튼2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/connect_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="연결2"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/success_color" />

            <Button
                android:id="@+id/disconnect_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="해제2"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/error_color" />

            <Button
                android:id="@+id/play_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="재생2"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/primary_color" />

            <Button
                android:id="@+id/pause_button2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="정지2"
                android:layout_marginStart="2dp"
                android:backgroundTint="@color/warning_color" />

        </LinearLayout>





    </LinearLayout>

</ScrollView> 