<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 버전 정보 -->
        <TextView
            android:id="@+id/version_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="xlab.player"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="16dp" />

        <!-- 비디오 플레이어 Fragment 컨테이너 (16:9 비율) -->
        <FrameLayout
            android:id="@+id/video_player_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="200dp"
            android:layout_marginBottom="16dp" />

        <!-- URL 입력 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RTSP URL:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/url_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="rtsp://example.com/stream"
            android:inputType="textUri"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_hint" />

        <!-- 연결 및 재생 제어 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/connect_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="연결"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/success_color" />

            <Button
                android:id="@+id/disconnect_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="연결 해제"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/error_color" />

            <Button
                android:id="@+id/play_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="재생"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:backgroundTint="@color/primary_color" />

            <Button
                android:id="@+id/pause_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="일시정지"
                android:layout_marginStart="2dp"
                android:backgroundTint="@color/warning_color" />

        </LinearLayout>



        <!-- PTZ 제어 슬라이더 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/status_background"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PTZ 카메라 제어"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/text_primary" />

            <!-- 팬(Pan) 제어 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="팬:"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/pan_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="360"
                    android:progress="180"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/pan_value_text"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 틸트(Tilt) 제어 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="틸트:"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/tilt_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="180"
                    android:progress="90"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tilt_value_text"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- 줌(Zoom) 제어 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="줌:"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp" />

                <SeekBar
                    android:id="@+id/zoom_seek_bar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="90"
                    android:progress="0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/zoom_value_text"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="1.0x"
                    android:textColor="@color/text_primary"
                    android:textSize="12sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- PTZ 리셋 버튼 -->
            <Button
                android:id="@+id/ptz_reset_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="홈 포지션으로 리셋"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/warning_color"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- 상태 표시 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="상태:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/status_text_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:text="준비됨"
            android:background="@drawable/status_background"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="12sp"
            android:textColor="@color/text_primary"
            android:fontFamily="monospace"
            android:textIsSelectable="true"
            android:longClickable="true" />

    </LinearLayout>

</ScrollView> 